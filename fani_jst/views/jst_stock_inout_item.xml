<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree/List View -->
        <record id="view_jst_stock_inout_item_tree" model="ir.ui.view">
            <field name="name">jst.stock.inout.item.tree</field>
            <field name="model">jst.stock.inout.item</field>
            <field name="arch" type="xml">
                <list string="JST Stock InOut Items">
                    <field name="inoutItemId"/>
                    <field name="inoutId"/>
                    <field name="skuId"/>
                    <field name="skuName"/>
                    <field name="qty"/>
                    <field name="realQty"/>
                    <field name="salePrice"/>
                    <field name="saleAmount"/>
                    <field name="payAmount"/>
                    <field name="isGift"/>
                    <field name="companyId"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_jst_stock_inout_item_form" model="ir.ui.view">
            <field name="name">jst.stock.inout.item.form</field>
            <field name="model">jst.stock.inout.item</field>
            <field name="arch" type="xml">
                <form string="JST Stock InOut Item">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="inoutItemId" readonly="1"/></h1>
                            <h2><field name="skuName" readonly="1"/></h2>
                        </div>
                        <group>
                            <group string="Identifiers">
                                <field name="inoutItemId"/>
                                <field name="inoutId"/>
                                <field name="jst_stock_inout_id"/>
                                <field name="companyId"/>
                                <field name="subOrderId"/>
                            </group>
                            <group string="Product">
                                <field name="itemId"/>
                                <field name="skuId"/>
                                <field name="skuName"/>
                                <field name="pic"/>
                            </group>
                        </group>

                        <group>
                            <group string="Quantities - Pricing">
                                <field name="qty"/>
                                <field name="realQty"/>
                                <field name="unit"/>
                                <field name="salePrice"/>
                                <field name="saleBasePrice"/>
                                <field name="saleAmount"/>
                                <field name="payAmount"/>
                                <field name="cost"/>
                                <field name="costAmount"/>
                            </group>
                            <group string="Extra">
                                <field name="isGift"/>
                                <field name="isVerifyShelfLife"/>
                                <field name="producedDate"/>
                                <field name="shelfLife"/>
                                <field name="producedDateDisplay"/>
                                <field name="propertiesValue"/>
                                <field name="remark"/>
                            </group>
                        </group>

                        <group>
                            <group string="Warehouse">
                                <field name="areaType"/>
                                <field name="areaTypeDisplay"/>
                                <field name="bin"/>
                                <field name="binType"/>
                                <field name="binTypeDisplay"/>
                                <field name="skuBatchId"/>
                            </group>
                            <group string="System">
                                <field name="rawPlatformOrderId"/>
                                <field name="invoicedQtyDel"/>
                                <field name="overloadLimitCnt"/>
                                <field name="packId"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
