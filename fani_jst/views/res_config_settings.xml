<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.jst</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block name="integration" position="inside">
                <setting id="jst_api" string="JST API">
                    <div class="content-group mt16">
                        <label for="jst_appkey" class="o_light_label mr8"/>
                        <field name="jst_appkey"/>
                    </div>
                    <div class="content-group">
                        <label for="jst_appsecret" class="o_light_label mr8"/>
                        <field name="jst_appsecret" password="True"/>
                    </div>
                    <button type="object" name="action_connect_jst" string="Connect JST" icon="oi-arrow-right" class="btn-link"/>
                    <button type="object" name="action_test" string="Test" icon="oi-arrow-right" class="btn-link"/>
                </setting>
            </block>
        </field>
    </record>
</odoo>
