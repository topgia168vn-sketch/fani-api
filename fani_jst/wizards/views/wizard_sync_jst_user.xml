<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_sync_jst_user_view_form" model="ir.ui.view">
        <field name="name">wizard.sync.jst.user.form</field>
        <field name="model">wizard.sync.jst.user</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="date_from" invisible="1"/>
                    <field name="date_to" invisible="1"/>
                </group>
                <footer>
                    <button name="action_sync" string="Sync Users" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_sync_jst_user_view_action" model="ir.actions.act_window">
        <field name="name">Sync Users</field>
        <field name="res_model">wizard.sync.jst.user</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="wizard_sync_jst_user_view_menu"
                name="Sync Users"
                parent="fani_jst.menu_jst_wizard"
                action="fani_jst.wizard_sync_jst_user_view_action"
                sequence="1"/>
</odoo>