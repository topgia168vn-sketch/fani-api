<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View for lark.department -->
    <record id="view_lark_department_form" model="ir.ui.view">
        <field name="name">lark.department.form</field>
        <field name="model">lark.department</field>
        <field name="arch" type="xml">
            <form string="Lark Department">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="department_id" />
                        <field name="open_department_id" />
                        <field name="parent_department_id" />
                        <field name="chat_id" />
                        <field name="leader_user_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_lark_department_list" model="ir.ui.view">
        <field name="name">lark.department.list</field>
        <field name="model">lark.department</field>
        <field name="arch" type="xml">
            <list string="Lark Department">
                <field name="name" />
                <field name="department_id" />
                <field name="open_department_id" />
                <field name="parent_department_id" />
                <field name="chat_id" />
                <field name="leader_user_id" />
            </list>
        </field>
    </record>

    <record id="action_lark_department" model="ir.actions.act_window">
        <field name="name">Lark Department</field>
        <field name="res_model">lark.department</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_lark_department" name="Department" parent="menu_lark_meta_data" action="action_lark_department"
        sequence="40" />
</odoo>
