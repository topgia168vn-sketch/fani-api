<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View for lark.file.bitable.table -->
    <record id="view_lark_file_bitable_table_form" model="ir.ui.view">
        <field name="name">lark.file.bitable.table.form</field>
        <field name="model">lark.file.bitable.table</field>
        <field name="arch" type="xml">
            <form string="Lark File">
                <header>
                    <button name="fetch_data" string="Fetch Data" type="object" class="btn-primary" />
                    <button name="action_view_table" string="View Table" type="object" class="btn-primary" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="revision" />
                        <field name="table_id" />
                        <field name="lark_file_id" />
                        <field name="user_id" />
                    </group>
                    <notebook>
                        <page string="Views">
                            <field name="lark_view_ids" readonly="True">
                                <list>
                                    <field name="view_name" />
                                    <field name="view_type" />
                                    <field name="view_id" />
                                    <field name="view_public_level" />
                                </list>
                            </field>
                        </page>
                        <page string="Fields">
                            <field name="lark_field_ids" readonly="True">
                                <list>
                                    <field name="field_name" />
                                    <field name="field_id" />
                                </list>
                            </field>
                        </page>
                        <page string="Records">
                            <field name="lark_record_ids" readonly="True">
                                <list>
                                    <field name="record_id" />
                                    <field name="created_by" />
                                    <field name="created_time" />
                                    <field name="last_modified_by" />
                                    <field name="last_modified_time" />
                                    <field name="shared_url" />
                                    <field name="record_url" />
                                    <field name="fields_json" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_lark_file_bitable_table_list" model="ir.ui.view">
        <field name="name">lark.file.bitable.table.list</field>
        <field name="model">lark.file.bitable.table</field>
        <field name="arch" type="xml">
            <list string="Lark File">
                <field name="name" />
                <field name="revision" />
                <field name="table_id" />
                <field name="lark_file_id" />
                <field name="user_id" />
            </list>
        </field>
    </record>

    <record id="view_lark_field_bitable_table_search" model="ir.ui.view">
        <field name="name">lark.file.bitable.table.search</field>
        <field name="model">lark.file.bitable.table</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="table_id" />
                <field name="user_id" />
                <group expand="0" string="Group By">
                    <filter name="group_by_lark_file_id" string="File" context="{'group_by': 'lark_file_id'}" />
                    <filter name="group_by_user_id" string="User" context="{'group_by': 'user_id'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="action_lark_file_bitable_table" model="ir.actions.act_window">
        <field name="name">Lark File</field>
        <field name="res_model">lark.file.bitable.table</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_by_lark_file_id': 1}</field>
    </record>

    <menuitem id="menu_lark_file_bitable_table" name="Tables" parent="menu_lark_meta_data"
        action="action_lark_file_bitable_table"
        sequence="60" />
</odoo>
