<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_lark_file_list" model="ir.ui.view">
        <field name="name">lark.file.list</field>
        <field name="model">lark.file</field>
        <field name="arch" type="xml">
            <list string="Lark Drive">
                <field name="name" />
                <field name="owner_id" />
                <field name="type" />
                <field name="token" />
                <field name="url" />
                <field name="parent_token" optional="hide" />
                <field name="created_time" />
                <field name="modified_time" />
                <field name="user_id" />
            </list>
        </field>
    </record>
    <!-- View for lark.file -->
    <record id="view_lark_file_form" model="ir.ui.view">
        <field name="name">lark.file.form</field>
        <field name="model">lark.file</field>
        <field name="arch" type="xml">
            <form string="Lark Drive">
                <header>
                    <button name="fetch_data" string="Fetch data" type="object" class="btn-primary"
                        invisible="type!='bitable'" />
                    <button name="fetch_items_in_this_folder" string="Fetch Items in this folder" type="object"
                        class="btn-primary" invisible="type!='folder'" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="owner_id" />
                        <field name="type" />
                        <field name="token" />
                        <field name="url" />
                        <field name="parent_token" />
                        <field name="created_time" />
                        <field name="modified_time" />
                        <field name="user_id" />
                    </group>
                    <notebook>
                        <page string="Tables">
                            <field name="lark_table_ids" readonly="True">
                                <list>
                                    <field name="name" />
                                    <button name="action_view_table" string="View Table" type="object"></button>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_lark_field_search" model="ir.ui.view">
        <field name="name">lark.file.search</field>
        <field name="model">lark.file</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="owner_id" />
                <field name="parent_token" />
                <group expand="0" string="Group By">
                    <filter name="group_by_parent" string="Parent" context="{'group_by': 'parent_id'}" />
                    <filter name="group_by_user_id" string="User" context="{'group_by': 'user_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_lark_file" model="ir.actions.act_window">
        <field name="name">Lark Drive</field>
        <field name="res_model">lark.file</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_by_parent': 1}</field>
    </record>

    <menuitem id="menu_lark_file" name="Drive" parent="menu_lark_root" action="action_lark_file"
        sequence="50" />
</odoo>
