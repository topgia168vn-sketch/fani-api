<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pancake Order Items List View -->
    <record id="view_pancake_order_items_list" model="ir.ui.view">
        <field name="name">pancake.order.item.list</field>
        <field name="model">pancake.order.item</field>
        <field name="arch" type="xml">
            <list string="Pancake Order Items" default_order="id">
                <field name="order_id"/>
                <field name="name"/>
                <field name="product_id_ext"/>
                <field name="variation_id_ext"/>
                <field name="sku"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="subtotal"/>
                <field name="total"/>
                <field name="is_bonus_product"/>
                <field name="is_composite"/>
                <field name="is_wholesale"/>
            </list>
        </field>
    </record>

    <!-- Pancake Order Items Form View -->
    <record id="view_pancake_order_items_form" model="ir.ui.view">
        <field name="name">pancake.order.item.form</field>
        <field name="model">pancake.order.item</field>
        <field name="arch" type="xml">
            <form string="Pancake Order Item">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="order_info">
                            <field name="order_id"/>
                        </group>
                        <group name="product_info">
                            <field name="product_id_ext"/>
                            <field name="variation_id_ext"/>
                            <field name="sku"/>
                        </group>
                    </group>
                    <group>
                        <group name="quantity_price">
                            <field name="quantity"/>
                            <field name="price"/>
                            <field name="discount_each_product"/>
                            <field name="is_discount_percent"/>
                            <field name="subtotal"/>
                            <field name="total"/>
                        </group>
                        <group name="product_flags">
                            <field name="measure_group_id"/>
                            <field name="is_bonus_product"/>
                            <field name="is_composite"/>
                            <field name="is_wholesale"/>
                            <field name="note"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Variation Info" name="variation_info">
                            <field name="variation_info_json" widget="json"/>
                        </page>
                        <page string="Components" name="components">
                            <field name="components_json" widget="json"/>
                        </page>
                        <page string="Raw Data" name="raw_data">
                            <field name="raw_payload" widget="json"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Pancake Order Items Search View -->
    <record id="view_pancake_order_items_search" model="ir.ui.view">
        <field name="name">pancake.order.item.search</field>
        <field name="model">pancake.order.item</field>
        <field name="arch" type="xml">
            <search string="Search Pancake Order Items">
                <field name="name"/>
                <field name="order_id"/>
                <field name="product_id_ext"/>
                <field name="variation_id_ext"/>
                <field name="sku"/>
                <separator/>
                <filter string="Bonus Products" name="bonus" domain="[('is_bonus_product', '=', True)]"/>
                <filter string="Composite Products" name="composite" domain="[('is_composite', '=', True)]"/>
                <filter string="Wholesale Products" name="wholesale" domain="[('is_wholesale', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Order" name="group_order" context="{'group_by': 'order_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id_ext'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pancake Order Items Action -->
    <record id="action_pancake_order_items" model="ir.actions.act_window">
        <field name="name">Pancake Order Items</field>
        <field name="res_model">pancake.order.item</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_pancake_order_items_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Pancake Order Item!
            </p>
            <p>
                Pancake Order Items are synchronized from the Pancake system.
            </p>
        </field>
    </record>

</odoo>
