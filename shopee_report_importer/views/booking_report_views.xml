<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Booking Report List View -->
    <record id="view_booking_report_list" model="ir.ui.view">
        <field name="name">shopee.booking.report.list</field>
        <field name="model">shopee.booking.report</field>
        <field name="arch" type="xml">
            <list string="Booking Reports">
                <field name="shop_id"/>
                <field name="report_date"/>
                <field name="product_id"/>
                <field name="product_name"/>
                <field name="price"/>
                <field name="revenue"/>
                <field name="products_sold"/>
                <field name="orders"/>
                <field name="estimated_commission"/>
                <field name="roi"/>
                <field name="total_buyers"/>
                <field name="new_buyers"/>
            </list>
        </field>
    </record>

    <!-- Booking Report Form View -->
    <record id="view_booking_report_form" model="ir.ui.view">
        <field name="name">shopee.booking.report.form</field>
        <field name="model">shopee.booking.report</field>
        <field name="arch" type="xml">
            <form string="Booking Report">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_name" placeholder="Product Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="shop_id"/>
                            <field name="report_date"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="price"/>
                        </group>
                    </group>
                    <group>
                        <group string="Sales Performance">
                            <field name="revenue"/>
                            <field name="products_sold"/>
                            <field name="orders"/>
                        </group>
                        <group string="Commission">
                            <field name="estimated_commission"/>
                            <field name="estimated_commission_rate"/>
                            <field name="roi"/>
                        </group>
                    </group>
                    <group>
                        <group string="Customer Metrics">
                            <field name="total_buyers"/>
                            <field name="new_buyers"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Booking Report Search View -->
    <record id="view_booking_report_search" model="ir.ui.view">
        <field name="name">shopee.booking.report.search</field>
        <field name="model">shopee.booking.report</field>
        <field name="arch" type="xml">
            <search string="Search Booking Reports">
                <field name="shop_id"/>
                <field name="product_id"/>
                <field name="product_name"/>
                <separator/>
                <filter string="This Week" name="this_week" domain="[
                        ('report_date', '&gt;=', (datetime.datetime.combine(context_today() + relativedelta(weeks=-1,days=1,weekday=0), datetime.time(0,0,0)).to_utc())),
                        ('report_date', '&lt;', (datetime.datetime.combine(context_today() + relativedelta(days=1,weekday=0), datetime.time(0,0,0)).to_utc())),
                    ]"/>
                <filter string="This Month" name="this_month" domain="[
                        ('report_date', '&gt;=', (datetime.datetime.combine(context_today() + relativedelta(day=1), datetime.time(0,0,0)).to_utc())),
                        ('report_date', '&lt;', (datetime.datetime.combine(context_today() + relativedelta(months=1,day=1), datetime.time(0,0,0)).to_utc())),
                    ]"/>
                <filter string="Last 30 Days" name="last_30_days" domain="[
                        ('report_date', '&gt;=', (datetime.datetime.combine(context_today() + relativedelta(days=-30), datetime.time(0,0,0)).to_utc())),
                        ('report_date', '&lt;', (datetime.datetime.combine(context_today() + relativedelta(days=1), datetime.time(0,0,0)).to_utc())),
                    ]"/>
                <separator/>
                <filter string="High Revenue" name="high_revenue"
                        domain="[('revenue', '&gt;', 10000000)]"/>
                <filter string="High ROI" name="high_roi"
                        domain="[('roi', '&gt;', 20)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Shop" name="group_shop" context="{'group_by': 'shop_id'}"/>
                    <filter string="Report Date" name="group_date" context="{'group_by': 'report_date'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Booking Report Pivot View -->
    <record id="view_booking_report_pivot" model="ir.ui.view">
        <field name="name">shopee.booking.report.pivot</field>
        <field name="model">shopee.booking.report</field>
        <field name="arch" type="xml">
            <pivot string="Booking Reports Analysis">
                <field name="shop_id" type="row"/>
                <field name="report_date" type="row"/>
                <field name="product_id" type="col"/>
                <field name="revenue" type="measure"/>
                <field name="products_sold" type="measure"/>
                <field name="orders" type="measure"/>
                <field name="estimated_commission" type="measure"/>
                <field name="roi" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Booking Report Graph View -->
    <record id="view_booking_report_graph" model="ir.ui.view">
        <field name="name">shopee.booking.report.graph</field>
        <field name="model">shopee.booking.report</field>
        <field name="arch" type="xml">
            <graph string="Booking Reports Analysis" type="bar">
                <field name="product_id" type="row"/>
                <field name="revenue" type="measure"/>
                <field name="products_sold" type="measure"/>
                <field name="orders" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Booking Report Action -->
    <record id="action_booking_report" model="ir.actions.act_window">
        <field name="name">Booking Reports</field>
        <field name="res_model">shopee.booking.report</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="context">{'search_default_this_month': 1}</field>
    </record>

</odoo>
