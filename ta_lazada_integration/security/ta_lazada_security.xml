<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_ta_lazada_user" model="res.groups">
        <field name="name">Lazada User</field>
        <field name="category_id" ref="base.module_category_sales"/>
        <field name="comment">Can access Lazada integration features</field>
    </record>

    <record id="group_ta_lazada_manager" model="res.groups">
        <field name="name">Lazada Manager</field>
        <field name="category_id" ref="base.module_category_sales"/>
        <field name="implied_ids" eval="[(4, ref('group_ta_lazada_user'))]"/>
        <field name="comment">Can manage Lazada integration settings and configurations</field>
    </record>

    <!-- Record Rules -->
    <record id="ta_lazada_config_rule" model="ir.rule">
        <field name="name">Lazada Config: User Access</field>
        <field name="model_id" ref="model_ta_lazada_config"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_ta_lazada_user'))]"/>
    </record>

    <record id="ta_lazada_product_rule" model="ir.rule">
        <field name="name">Lazada Product: User Access</field>
        <field name="model_id" ref="model_ta_lazada_product"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_ta_lazada_user'))]"/>
    </record>

    <record id="ta_lazada_order_rule" model="ir.rule">
        <field name="name">Lazada Order: User Access</field>
        <field name="model_id" ref="model_ta_lazada_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_ta_lazada_user'))]"/>
    </record>

    <record id="ta_lazada_category_rule" model="ir.rule">
        <field name="name">Lazada Category: User Access</field>
        <field name="model_id" ref="model_ta_lazada_category"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_ta_lazada_user'))]"/>
    </record>

</odoo>
