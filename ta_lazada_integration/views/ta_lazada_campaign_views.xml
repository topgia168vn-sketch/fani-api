<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ta_lazada_campaign_list" model="ir.ui.view">
        <field name="name">ta.lazada.campaign.list</field>
        <field name="model">ta.lazada.campaign</field>
        <field name="arch" type="xml">
            <list>
                <field name="authorized_shop_id"/>
                <field name="campaign_id"/>
                <field name="name"/>
                <field name="status"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="daily_budget"/>
                <field name="spend"/>
                <field name="clicks"/>
                <field name="impressions"/>
                <field name="ctr"/>
            </list>
        </field>
    </record>

    <record id="view_ta_lazada_campaign_form" model="ir.ui.view">
        <field name="name">ta.lazada.campaign.form</field>
        <field name="model">ta.lazada.campaign</field>
        <field name="arch" type="xml">
            <form string="Lazada Campaign">
                <sheet>
                    <group>
                        <field name="authorized_shop_id"/>
                        <field name="campaign_id"/>
                        <field name="name"/>
                        <field name="status"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <notebook>
                        <page string="List Metrics">
                            <group>
                                <field name="daily_budget"/>
                                <field name="spend"/>
                                <field name="clicks"/>
                                <field name="impressions"/>
                                <field name="ctr"/>
                                <field name="cpc"/>
                                <field name="store_revenue"/>
                                <field name="store_orders"/>
                                <field name="store_units_sold"/>
                                <field name="store_roi"/>
                                <field name="campaign_daily_budget_status"/>
                                <field name="campaign_switch_status"/>
                                <field name="ad_account_balance_status"/>
                                <field name="campaign_schedule_status"/>
                                <field name="have_active_ad_status"/>
                            </group>
                        </page>
                        <page string="Detail">
                            <group>
                                <field name="objective"/>
                                <field name="type"/>
                                <field name="online_status"/>
                                <field name="switch_status"/>
                                <field name="platform"/>
                                <field name="budget_used_amount"/>
                                <field name="auto_item_select"/>
                                <field name="model_code"/>
                                <field name="max_bid"/>
                                <field name="have_ad_count"/>
                                <field name="scene_id"/>
                                <field name="auto_creative"/>
                                <field name="day_budget"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ta_lazada_campaign" model="ir.actions.act_window">
        <field name="name">Lazada Campaigns</field>
        <field name="res_model">ta.lazada.campaign</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    
</odoo>
