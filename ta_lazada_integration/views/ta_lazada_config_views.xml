<odoo>
    <record id="view_ta_lazada_config_form" model="ir.ui.view">
        <field name="name">ta.lazada.config.form</field>
        <field name="model">ta.lazada.config</field>
        <field name="arch" type="xml">
            <form string="Lazada Configuration">
                <header>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_ta_lazada_authorized_shop" string="Authorized Shops" type="object" class="oe_stat_button" icon="fa-shopping-bag" />
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="app_key" password="True"/>
                            <field name="app_secret" password="True"/>
                            <field name="api_url" readonly="1"/>
                        </group>
                        <group>
                            <field name="country_code"/>
                            <field name="isv_company_name"/>
                            <field name="isv_contact_email"/>
                            <field name="isv_contact_phone"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Authorized Shops" name="authorized_shops">
                            <field name="authorized_shops" readonly="1">
                                <list>
                                    <field name="shop_name"/>
                                    <field name="seller_id"/>
                                    <field name="country_code"/>
                                    <field name="authorization_status"/>
                                    <field name="total_products"/>
                                    <field name="total_orders"/>
                                    <field name="last_sync_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_ta_lazada_config_tree" model="ir.ui.view">
        <field name="name">ta.lazada.config.tree</field>
        <field name="model">ta.lazada.config</field>
        <field name="arch" type="xml">
            <list string="Lazada Configurations">
                <field name="name"/>
                <field name="country_code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_ta_lazada_config_search" model="ir.ui.view">
        <field name="name">ta.lazada.config.search</field>
        <field name="model">ta.lazada.config</field>
        <field name="arch" type="xml">
            <search string="Search Lazada Configurations">
                <field name="name"/>
                <field name="country_code"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Country" name="group_country" context="{'group_by': 'country_code'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_ta_lazada_config" model="ir.actions.act_window">
        <field name="name">Lazada Configurations</field>
        <field name="res_model">ta.lazada.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Lazada configuration!
            </p>
            <p>
                Configure your Lazada API credentials and settings to start syncing products and orders.
            </p>
        </field>
    </record>
</odoo>
