<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ta_lazada_product_form" model="ir.ui.view">
        <field name="name">ta.lazada.product.form</field>
        <field name="model">ta.lazada.product</field>
        <field name="arch" type="xml">
            <form string="Lazada Product">
                <header>
                    <field name="sync_status" widget="statusbar" statusbar_visible="pending,synced,failed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Product Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="authorized_shop_id"/>
                            <field name="sku"/>
                            <field name="seller_sku"/>
                            <field name="barcode"/>
                        </group>
                        <group>
                            <field name="lazada_item_id"/>
                            <field name="lazada_sku_id"/>
                            <field name="item_type"/>
                            <field name="category_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="status"/>
                            <field name="last_sync_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="min_quantity"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product Details" name="product_details">
                            <group>
                                <group>
                                    <field name="brand"/>
                                    <field name="model"/>
                                    <field name="warranty"/>
                                </group>
                                <group>
                                    <field name="package_weight"/>
                                    <field name="package_length"/>
                                    <field name="package_width"/>
                                    <field name="package_height"/>
                                </group>
                            </group>
                        </page>
                        <page string="Pricing" name="pricing">
                            <group>
                                <group>
                                    <field name="price"/>
                                    <field name="currency"/>
                                </group>
                                <group>
                                    <field name="special_price"/>
                                    <field name="special_price_from"/>
                                    <field name="special_price_to"/>
                                </group>
                            </group>
                        </page>
                        <page string="Images" name="images">
                            <field name="image_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="image" widget="image" class="oe_avatar"/>
                                    <field name="image_url"/>
                                    <field name="sort_order"/>
                                </list>
                            </field>
                        </page>
                        <page string="Attributes" name="attributes">
                            <field name="attribute_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="value"/>
                                    <field name="is_required"/>
                                </list>
                            </field>
                        </page>
                        <page string="SKUs" name="skus">
                            <field name="sku_ids">
                                <list>
                                    <field name="lazada_sku_id"/>
                                    <field name="seller_sku"/>
                                    <field name="shop_sku"/>
                                    <field name="variant_name"/>
                                    <field name="status"/>
                                    <field name="price"/>
                                    <field name="special_price"/>
                                    <field name="quantity"/>
                                    <field name="url"/>
                                    <field name="package_weight"/>
                                    <field name="package_length"/>
                                    <field name="package_width"/>
                                    <field name="package_height"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_ta_lazada_product_tree" model="ir.ui.view">
        <field name="name">ta.lazada.product.tree</field>
        <field name="model">ta.lazada.product</field>
        <field name="arch" type="xml">
            <list string="Lazada Products">
                <field name="name"/>
                <field name="sku"/>
                <field name="seller_sku"/>
                <field name="lazada_item_id"/>
                <field name="lazada_sku_id"/>
                <field name="authorized_shop_id"/>
                <field name="price"/>
                <field name="currency"/>
                <field name="quantity"/>
                <field name="barcode"/>
                <field name="status"/>
                <field name="sync_status"/>
            </list>
        </field>
    </record>

    <record id="view_ta_lazada_product_search" model="ir.ui.view">
        <field name="name">ta.lazada.product.search</field>
        <field name="model">ta.lazada.product</field>
        <field name="arch" type="xml">
            <search string="Search Lazada Products">
                <field name="name"/>
                <field name="sku"/>
                <field name="lazada_item_id"/>
                <field name="authorized_shop_id"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]"/>
                <filter string="Synced" name="synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="Failed" name="failed" domain="[('sync_status', '=', 'failed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Sync Status" name="group_sync_status" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_ta_lazada_product" model="ir.actions.act_window">
        <field name="name">Lazada Products</field>
        <field name="res_model">ta.lazada.product</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Lazada product!
            </p>
            <p>
                Add products to sync with Lazada marketplace.
            </p>
        </field>
    </record>

    <!-- Product Image Form -->
    <record id="view_ta_lazada_product_image_form" model="ir.ui.view">
        <field name="name">ta.lazada.product.image.form</field>
        <field name="model">ta.lazada.product.image</field>
        <field name="arch" type="xml">
            <form string="Product Image">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="image" widget="image"/>
                            <field name="sort_order"/>
                        </group>
                        <group>
                            <field name="image_url"/>
                            <field name="hash_code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Attribute Form -->
    <record id="view_ta_lazada_product_attribute_form" model="ir.ui.view">
        <field name="name">ta.lazada.product.attribute.form</field>
        <field name="model">ta.lazada.product.attribute</field>
        <field name="arch" type="xml">
            <form string="Product Attribute">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="value"/>
                        <field name="is_required"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
