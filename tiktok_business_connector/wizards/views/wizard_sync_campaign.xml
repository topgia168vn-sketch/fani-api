<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_sync_tiktok_campaign_view_form" model="ir.ui.view">
        <field name="name">wizard.sync.tiktok.campaign.form</field>
        <field name="model">wizard.sync.tiktok.campaign</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="odoo_advertiser_ids" widget="many2many_tags"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_sync" string="Sync Campaigns" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_sync_tiktok_campaign_action" model="ir.actions.act_window">
        <field name="name">Sync Campaigns</field>
        <field name="res_model">wizard.sync.tiktok.campaign</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="wizard_sync_tiktok_campaign_menu"
                name="Sync Campaigns"
                parent="menu_tiktok_wizard"
                action="wizard_sync_tiktok_campaign_action"
                sequence="20"/>
</odoo> 