<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TikTok Cancel Reason List View -->
    <record id="view_tiktok_cancel_reason_list" model="ir.ui.view">
        <field name="name">tiktok.cancel.reason.list</field>
        <field name="model">tiktok.cancel.reason</field>
        <field name="arch" type="xml">
            <list string="Cancel Reasons" editable="bottom">
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- TikTok Cancel Reason Form View -->
    <record id="view_tiktok_cancel_reason_form" model="ir.ui.view">
        <field name="name">tiktok.cancel.reason.form</field>
        <field name="model">tiktok.cancel.reason</field>
        <field name="arch" type="xml">
            <form string="Cancel Reason">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TikTok Cancel Reason Search View -->
    <record id="view_tiktok_cancel_reason_search" model="ir.ui.view">
        <field name="name">tiktok.cancel.reason.search</field>
        <field name="model">tiktok.cancel.reason</field>
        <field name="arch" type="xml">
            <search string="Search Cancel Reasons">
                <field name="code" string="Code"/>
                <field name="name" string="Name"/>
            </search>
        </field>
    </record>

    <!-- TikTok Cancel Reason Action -->
    <record id="action_tiktok_cancel_reason" model="ir.actions.act_window">
        <field name="name">Cancel Reasons</field>
        <field name="res_model">tiktok.cancel.reason</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
