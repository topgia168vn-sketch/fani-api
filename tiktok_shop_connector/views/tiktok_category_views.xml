<odoo>
    <record id="view_tiktok_category_list" model="ir.ui.view">
        <field name="name">tiktok.category.list</field>
        <field name="model">tiktok.category</field>
        <field name="arch" type="xml">
            <list string="TikTok Categories">
                <field name="tiktok_id" />
                <field name="local_name" />
                <field name="parent_id" />
                <field name="is_leaf" />
            </list>
        </field>
    </record>

    <record id="view_tiktok_category_form" model="ir.ui.view">
        <field name="name">tiktok.category.form</field>
        <field name="model">tiktok.category</field>
        <field name="arch" type="xml">
            <form string="TikTok Category">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="local_name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="tiktok_id" />
                        <field name="local_name" />
                        <field name="parent_id" />
                        <field name="is_leaf" />
                    </group>
                    <group string="Permission Statuses">
                        <field name="permission_statuses" readonly="1" />
                    </group>
                    <group string="Raw Data">
                        <field name="raw_payload" readonly="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tiktok_category_search" model="ir.ui.view">
        <field name="name">tiktok.category.search</field>
        <field name="model">tiktok.category</field>
        <field name="arch" type="xml">
            <search string="Search Categories">
                <field name="tiktok_id" string="Category ID" />
                <field name="local_name" string="Category Name" />
                <field name="parent_id" string="Parent Category" />

                <separator />
                <filter string="Leaf Categories" name="leaf_categories" domain="[('is_leaf', '=', True)]" />
                <filter string="Parent Categories" name="parent_categories" domain="[('is_leaf', '=', False)]" />
                <filter string="Root Categories" name="root_categories" domain="[('parent_id', '=', False)]" />

                <separator />
                <group expand="0" string="Group By">
                    <filter string="Parent Category" name="group_parent" context="{'group_by': 'parent_id'}" />
                    <filter string="Is Leaf" name="group_leaf" context="{'group_by': 'is_leaf'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_tiktok_category" model="ir.actions.act_window">
        <field name="name">TikTok Categories</field>
        <field name="res_model">tiktok.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
