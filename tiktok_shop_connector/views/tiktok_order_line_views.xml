<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TiktokOrderLine List View -->
    <record id="view_tiktok_order_line_list" model="ir.ui.view">
        <field name="name">tiktok.order.line.list</field>
        <field name="model">tiktok.order.line</field>
        <field name="arch" type="xml">
            <list string="TikTok Order Lines">
                <field name="order_id"/>
                <field name="product_name"/>
                <field name="sku_name"/>
                <field name="seller_sku"/>
                <field name="sale_price"/>
                <field name="display_status"/>
                <field name="package_status"/>
                <field name="tracking_number"/>
            </list>
        </field>
    </record>

    <!-- TiktokOrderLine Form View -->
    <record id="view_tiktok_order_line_form" model="ir.ui.view">
        <field name="name">tiktok.order.line.form</field>
        <field name="model">tiktok.order.line</field>
        <field name="arch" type="xml">
            <form string="TikTok Order Line">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="tiktok_id" readonly="1"/>
                            <field name="order_id" readonly="1"/>
                            <field name="shop_id" readonly="1"/>
                            <field name="currency"/>
                            <field name="original_price"/>
                            <field name="sale_price"/>
                        </group>
                        <group string="Product Information">
                            <field name="product_id"/>
                            <field name="product_name"/>
                            <field name="sku_id"/>
                            <field name="sku_name"/>
                            <field name="tiktok_sku_id"/>
                            <field name="seller_sku"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status">
                            <field name="display_status"/>
                            <field name="package_status"/>
                            <field name="sku_type"/>
                            <field name="cancel_user"/>
                            <field name="cancel_reason"/>
                            <field name="is_on_hold_order"/>
                        </group>
                        <group string="Shipping">
                            <field name="shipping_provider_name"/>
                            <field name="shipping_provider_id"/>
                            <field name="shipping_type"/>
                            <field name="tracking_number"/>
                            <field name="package_id"/>
                            <field name="handling_duration_days"/>
                        </group>
                    </group>
                    <group>
                        <group string="Fees &amp; Discounts">
                            <field name="platform_discount"/>
                            <field name="seller_discount"/>
                            <field name="small_order_fee"/>
                            <field name="retail_delivery_fee"/>
                            <field name="buyer_service_fee"/>
                        </group>
                        <group string="Special Flags">
                            <field name="is_gift"/>
                            <field name="is_dangerous_good"/>
                            <field name="needs_prescription"/>
                        </group>
                    </group>
                    <group>
                        <group string="Order Timeline">
                            <field name="rts_time" readonly="1"/>
                            <field name="request_cancel_time" readonly="1"/>
                            <field name="delivery_time" readonly="1"/>
                            <field name="collection_time" readonly="1"/>
                            <field name="cancel_time" readonly="1"/>
                        </group>
                        <group string="SLA &amp; Deadlines">
                            <field name="delivery_due_time" readonly="1"/>
                            <field name="collection_due_time" readonly="1"/>
                            <field name="pick_up_cut_off_time" readonly="1"/>
                            <field name="fast_dispatch_sla_time" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TiktokOrderLine Search View -->
    <record id="view_tiktok_order_line_search" model="ir.ui.view">
        <field name="name">tiktok.order.line.search</field>
        <field name="model">tiktok.order.line</field>
        <field name="arch" type="xml">
            <search string="Search TikTok Order Lines">
                <field name="product_name"/>
                <field name="sku_name"/>
                <field name="seller_sku"/>
                <field name="order_id"/>
                <field name="shop_id"/>
                <field name="tiktok_id"/>
                <separator/>
                <filter string="Unpaid" name="unpaid" domain="[('display_status', '=', 'UNPAID')]"/>
                <filter string="Awaiting Shipment" name="awaiting_shipment" domain="[('display_status', '=', 'AWAITING_SHIPMENT')]"/>
                <filter string="Awaiting Collection" name="awaiting_collection" domain="[('display_status', '=', 'AWAITING_COLLECTION')]"/>
                <filter string="In Transit" name="in_transit" domain="[('display_status', '=', 'IN_TRANSIT')]"/>
                <filter string="Delivered" name="delivered" domain="[('display_status', '=', 'DELIVERED')]"/>
                <filter string="Completed" name="completed" domain="[('display_status', '=', 'COMPLETED')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('display_status', '=', 'CANCELLED')]"/>

                <separator/>
                <filter string="Gift Items" name="gift" domain="[('is_gift', '=', True)]"/>
                <filter string="Dangerous Goods" name="dangerous" domain="[('is_dangerous_good', '=', True)]"/>
                <filter string="Needs Prescription" name="prescription" domain="[('needs_prescription', '=', True)]"/>
                <filter string="On Hold" name="on_hold" domain="[('is_on_hold_order', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Order" name="group_order" context="{'group_by': 'order_id'}"/>
                    <filter string="Shop" name="group_shop" context="{'group_by': 'shop_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'display_status'}"/>
                    <filter string="Package Status" name="group_package" context="{'group_by': 'package_status'}"/>
                    <filter string="SKU Type" name="group_sku_type" context="{'group_by': 'sku_type'}"/>
                    <filter string="Shipping Type" name="group_shipping_type" context="{'group_by': 'shipping_type'}"/>
                    <filter string="Cancel User" name="group_cancel_user" context="{'group_by': 'cancel_user'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_tiktok_order_line_pivot" model="ir.ui.view">
        <field name="name">tiktok.order.line.pivot</field>
        <field name="model">tiktok.order.line</field>
        <field name="arch" type="xml">
            <pivot string="Order Line Analysis">
                <field name="shop_id" type="row"/>
                <field name="sale_price" type="measure"/>
                <field name="original_price" type="measure"/>
                <field name="platform_discount" type="measure"/>
                <field name="seller_discount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_tiktok_order_line_graph" model="ir.ui.view">
        <field name="name">tiktok.order.line.graph</field>
        <field name="model">tiktok.order.line</field>
        <field name="arch" type="xml">
            <graph string="Order Line Trends" type="line">
                <field name="shop_id" type="row"/>
                <field name="sale_price" type="measure"/>
                <field name="original_price" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tiktok_order_line" model="ir.actions.act_window">
        <field name="name">TikTok Order Lines</field>
        <field name="res_model">tiktok.order.line</field>
        <field name="view_mode">list,form,pivot,graph</field>
    </record>

</odoo>
