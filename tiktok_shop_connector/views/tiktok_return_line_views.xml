<odoo>
    <!-- Return Line List View -->
    <record id="view_tiktok_return_line_list" model="ir.ui.view">
        <field name="name">tiktok.return.line.list</field>
        <field name="model">tiktok.return.line</field>
        <field name="arch" type="xml">
            <list string="TikTok Return Lines">
                <field name="return_id"/>
                <field name="product_name"/>
                <field name="sku_name"/>
                <field name="seller_sku"/>
                <field name="refund_total"/>
                <field name="refund_currency"/>
                <field name="product_seller_discount"/>
                <field name="product_platform_discount"/>
                <field name="shop_id"/>
            </list>
        </field>
    </record>

    <!-- Return Line Form View -->
    <record id="view_tiktok_return_line_form" model="ir.ui.view">
        <field name="name">tiktok.return.line.form</field>
        <field name="model">tiktok.return.line</field>
        <field name="arch" type="xml">
            <form string="TikTok Return Line">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="return_id"/>
                            <field name="return_line_item_id"/>
                            <field name="order_line_item_id"/>
                            <field name="product_id"/>
                            <field name="sku_id"/>
                            <field name="seller_sku"/>
                        </group>
                        <group string="Product Information">
                            <field name="product_name"/>
                            <field name="sku_name"/>
                            <field name="product_image_uri"/>
                            <field name="product_image_width"/>
                            <field name="product_image_height"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Refund Information" name="refund">
                            <group>
                                <group string="Refund Amount">
                                    <field name="refund_currency"/>
                                    <field name="refund_total"/>
                                    <field name="refund_subtotal"/>
                                    <field name="refund_shipping_fee"/>
                                    <field name="refund_tax"/>
                                    <field name="retail_delivery_fee"/>
                                    <field name="buyer_service_fee"/>
                                </group>
                            </group>
                        </page>

                        <page string="Discount Information" name="discount">
                            <group>
                                <group string="Discount Amount">
                                    <field name="discount_currency"/>
                                    <field name="product_seller_discount"/>
                                    <field name="product_platform_discount"/>
                                    <field name="shipping_fee_platform_discount"/>
                                    <field name="shipping_fee_seller_discount"/>
                                </group>
                            </group>
                        </page>

                        <page string="Shipping Fee Information" name="shipping_fee">
                            <group>
                                <group string="Shipping Fee Amount">
                                    <field name="shipping_fee_currency"/>
                                    <field name="seller_paid_return_shipping_fee"/>
                                    <field name="platform_paid_return_shipping_fee"/>
                                    <field name="buyer_paid_return_shipping_fee"/>
                                </group>
                            </group>
                        </page>

                        <page string="Shop Information" name="shop_info">
                            <group>
                                <field name="shop_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Return Line Search View -->
    <record id="view_tiktok_return_line_search" model="ir.ui.view">
        <field name="name">tiktok.return.line.search</field>
        <field name="model">tiktok.return.line</field>
        <field name="arch" type="xml">
            <search string="Search Return Lines">
                <field name="return_id"/>
                <field name="product_name"/>
                <field name="sku_name"/>
                <field name="seller_sku"/>
                <field name="shop_id"/>

                <filter string="Has Refund" name="has_refund" domain="[('refund_total', '&gt;', 0)]"/>
                <filter string="No Refund" name="no_refund" domain="[('refund_total', '=', 0)]"/>

                <group expand="0" string="Group By">
                    <filter string="Return" name="group_return" context="{'group_by': 'return_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="SKU" name="group_sku" context="{'group_by': 'sku_id'}"/>
                    <filter string="Shop" name="group_shop" context="{'group_by': 'shop_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_tiktok_return_line_pivot" model="ir.ui.view">
        <field name="name">tiktok.return.line.pivot</field>
        <field name="model">tiktok.return.line</field>
        <field name="arch" type="xml">
            <pivot string="Return Line Analysis">
                <field name="shop_id" type="row"/>
                <field name="refund_total" type="measure"/>
                <field name="refund_subtotal" type="measure"/>
                <field name="refund_shipping_fee" type="measure"/>
                <field name="refund_tax" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_tiktok_return_line_graph" model="ir.ui.view">
        <field name="name">tiktok.return.line.graph</field>
        <field name="model">tiktok.return.line</field>
        <field name="arch" type="xml">
            <graph string="Return Line Trends" type="line">
                <field name="shop_id" type="row"/>
                <field name="refund_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Return Line Action -->
    <record id="action_tiktok_return_line" model="ir.actions.act_window">
        <field name="name">TikTok Return Lines</field>
        <field name="res_model">tiktok.return.line</field>
        <field name="view_mode">list,form,pivot,graph</field>
    </record>

</odoo>
