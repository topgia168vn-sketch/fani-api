<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_tiktok_sku_performance_list" model="ir.ui.view">
        <field name="name">tiktok.sku.performance.list</field>
        <field name="model">tiktok.sku.performance</field>
        <field name="arch" type="xml">
            <list string="SKU Performance">
                <field name="sku_id"/>
                <field name="product_id"/>
                <field name="report_date"/>
                <field name="gmv_amount"/>
                <field name="gmv_currency"/>
                <field name="units_sold"/>
                <field name="sku_orders"/>
                <field name="gmv_live"/>
                <field name="gmv_video"/>
                <field name="gmv_product_card"/>
                <field name="shop_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_tiktok_sku_performance_form" model="ir.ui.view">
        <field name="name">tiktok.sku.performance.form</field>
        <field name="model">tiktok.sku.performance</field>
        <field name="arch" type="xml">
            <form string="SKU Performance">
                <sheet>
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="tiktok_sku_id"/>
                            <field name="sku_id"/>
                            <field name="product_id"/>
                            <field name="shop_id"/>
                            <field name="report_date"/>
                        </group>
                        <group name="overall_metrics" string="Overall Metrics">
                            <field name="gmv_amount"/>
                            <field name="gmv_currency"/>
                            <field name="units_sold"/>
                            <field name="sku_orders"/>
                        </group>
                    </group>
                    <group>
                        <group name="live_metrics" string="Live Stream Metrics">
                            <field name="gmv_live"/>
                            <field name="units_sold_live"/>
                        </group>
                        <group name="video_metrics" string="Video Metrics">
                            <field name="gmv_video"/>
                            <field name="units_sold_video"/>
                        </group>
                    </group>
                    <group>
                        <group name="product_card_metrics" string="Product Card Metrics">
                            <field name="gmv_product_card"/>
                            <field name="units_sold_product_card"/>
                        </group>
                        <group name="raw_data" string="Raw Data">
                            <field name="raw_payload" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_tiktok_sku_performance_search" model="ir.ui.view">
        <field name="name">tiktok.sku.performance.search</field>
        <field name="model">tiktok.sku.performance</field>
        <field name="arch" type="xml">
            <search string="Search SKU Performance">
                <field name="sku_id"/>
                <field name="product_id"/>
                <field name="shop_id"/>
                <field name="report_date"/>
                <separator/>
                <filter string="Today" name="today" domain="[('report_date', '=', context_today())]"/>
                <filter string="This Week" name="this_week" domain="[
                    ('report_date', '&gt;=', (context_today() + relativedelta(weeks=-1, days=1, weekday=0)).strftime('%Y-%m-%d')),
                    ('report_date', '&lt;', (context_today() + relativedelta(days=1, weekday=0)).strftime('%Y-%m-%d'))
                ]"/>
                <filter string="This Month" name="this_month" domain="[
                    ('report_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                    ('report_date', '&lt;', (context_today() + relativedelta(months=1,day=1)).strftime('%Y-%m-%d'))
                ]"/>
                <separator/>
                <filter string="High GMV" name="high_gmv" domain="[('gmv_amount', '&gt;', 1000)]"/>
                <filter string="High Units" name="high_units" domain="[('units_sold', '&gt;', 50)]"/>
                <filter string="High Orders" name="high_orders" domain="[('sku_orders', '&gt;', 10)]"/>
                <separator/>
                <filter string="Has Live Performance" name="has_live" domain="[('gmv_live', '&gt;', 0)]"/>
                <filter string="Has Video Performance" name="has_video" domain="[('gmv_video', '&gt;', 0)]"/>
                <filter string="Has Product Card Performance" name="has_product_card" domain="[('gmv_product_card', '&gt;', 0)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="SKU" name="group_by_sku" context="{'group_by': 'sku_id'}"/>
                    <filter string="Product" name="group_by_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Shop" name="group_by_shop" context="{'group_by': 'shop_id'}"/>
                    <filter string="Report Date" name="group_by_date" context="{'group_by': 'report_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_tiktok_sku_performance_pivot" model="ir.ui.view">
        <field name="name">tiktok.sku.performance.pivot</field>
        <field name="model">tiktok.sku.performance</field>
        <field name="arch" type="xml">
            <pivot string="SKU Performance Analysis">
                <field name="report_date" type="row"/>
                <field name="shop_id" type="row"/>
                <field name="sku_id" type="row"/>
                <field name="gmv_amount" type="measure"/>
                <field name="units_sold" type="measure"/>
                <field name="sku_orders" type="measure"/>
                <field name="gmv_live" type="measure"/>
                <field name="gmv_video" type="measure"/>
                <field name="gmv_product_card" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_tiktok_sku_performance_graph" model="ir.ui.view">
        <field name="name">tiktok.sku.performance.graph</field>
        <field name="model">tiktok.sku.performance</field>
        <field name="arch" type="xml">
            <graph string="SKU Performance Trends" type="line">
                <field name="report_date" type="row"/>
                <field name="shop_id" type="col"/>
                <field name="gmv_amount" type="measure"/>
                <field name="units_sold" type="measure"/>
                <field name="sku_orders" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tiktok_sku_performance" model="ir.actions.act_window">
        <field name="name">SKU Performance</field>
        <field name="res_model">tiktok.sku.performance</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="context">{'search_default_this_month': 1}</field>
    </record>

</odoo>
