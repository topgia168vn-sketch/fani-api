<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- YonSuite Country List View -->
        <record id="yonsuite_country_view_list" model="ir.ui.view">
            <field name="name">yonsuite.country.view.list</field>
            <field name="model">yonsuite.country</field>
            <field name="arch" type="xml">
                <list string="YonSuite Countries" decoration-info="state=='draft'" decoration-success="state=='synced'" decoration-muted="state=='error'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="alpha_code"/>
                    <field name="numeric_code"/>
                    <field name="name_en_us"/>
                    <field name="enable"/>
                    <field name="ispreset"/>
                    <field name="state"/>
                    <field name="last_sync_date"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>
        
        <!-- YonSuite Country Form View -->
        <record id="yonsuite_country_view_form" model="ir.ui.view">
            <field name="name">yonsuite.country.view.form</field>
            <field name="model">yonsuite.country</field>
            <field name="arch" type="xml">
                <form string="YonSuite Country">
                    <header>
                        <button name="action_export_to_yonsuite" type="object" string="Sync from YonSuite" class="btn-primary" 
                                invisible="state in ['synced', 'error']" confirm="Are you sure you want to sync this country from YonSuite?"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" class="btn-secondary" 
                                invisible="state != 'synced'"/>
                        <field name="state" widget="statusbar" options="{'statusbar_visible': 'draft,synced'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_export_to_yonsuite" type="object" class="oe_stat_button" icon="fa-download" 
                                    invisible="state in ['synced', 'error']">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Sync from</span>
                                    <span class="o_stat_text">YonSuite</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Enter country name..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Basic Information">
                                <field name="yonsuite_id" readonly="1"/>
                                <field name="code"/>
                                <field name="alpha_code" readonly="1"/>
                                <field name="numeric_code" readonly="1"/>
                                <field name="enable"/>
                                <field name="ispreset"/>
                            </group>
                            <group string="System Information">
                                <field name="sysid" readonly="1"/>
                                <field name="ytenant" readonly="1"/>
                                <field name="tenant" readonly="1"/>
                                <field name="source_unique" readonly="1"/>
                                <field name="dr" readonly="1"/>
                                <field name="sort_num" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Multilingual Names">
                                <field name="name_en_us" readonly="1"/>
                                <field name="name_zh_cn" readonly="1"/>
                                <field name="name_zh_tw" readonly="1"/>
                                <field name="name_vi_vn" readonly="1"/>
                            </group>
                            <group string="Additional Information">
                                <field name="name_resid" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Timestamps">
                                <field name="pubts" readonly="1"/>
                                <field name="last_sync_date" readonly="1"/>
                            </group>
                            <group string="Sync Information">
                                <field name="create_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Sync Error" invisible="not sync_error_message">
                            <field name="sync_error_message" readonly="1" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- YonSuite Country Search View -->
        <record id="yonsuite_country_view_search" model="ir.ui.view">
            <field name="name">yonsuite.country.view.search</field>
            <field name="model">yonsuite.country</field>
            <field name="arch" type="xml">
                <search string="Search YonSuite Countries">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="alpha_code"/>
                    <field name="numeric_code"/>
                    <field name="name_en_us"/>
                    <field name="name_zh_cn"/>
                    <field name="yonsuite_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Synced" name="synced" domain="[('state', '=', 'synced')]"/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                    <filter string="Enabled" name="enabled" domain="[('enable', '=', True)]"/>
                    <filter string="Disabled" name="disabled" domain="[('enable', '=', False)]"/>
                    <filter string="Preset" name="preset" domain="[('ispreset', '=', True)]"/>
                    <filter string="Custom" name="custom" domain="[('ispreset', '=', False)]"/>
                    <separator/>
                    <filter string="My Countries" name="my_countries" domain="[('create_uid', '=', uid)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Preset Status" name="group_preset" context="{'group_by': 'ispreset'}"/>
                        <filter string="Enabled Status" name="group_enabled" context="{'group_by': 'enable'}"/>
                        <filter string="Created by" name="group_create_uid" context="{'group_by': 'create_uid'}"/>
                        <filter string="Creation Date" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- YonSuite Country Action -->
        <record id="yonsuite_country_action" model="ir.actions.act_window">
            <field name="name">YonSuite Countries</field>
            <field name="res_model">yonsuite.country</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="yonsuite_country_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first YonSuite Country!
                </p>
                <p>
                    YonSuite Countries allow you to manage and synchronize country data with YonSuite API.
                </p>
            </field>
        </record>
        
        
    </data>
</odoo>
