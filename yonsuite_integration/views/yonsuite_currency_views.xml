<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- YonSuite Currency List View -->
        <record id="yonsuite_currency_view_list" model="ir.ui.view">
            <field name="name">yonsuite.currency.view.list</field>
            <field name="model">yonsuite.currency</field>
            <field name="arch" type="xml">
                <list string="YonSuite Currencies" decoration-info="state=='draft'" decoration-success="state=='synced'" decoration-muted="state=='error'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="curr_type_sign"/>
                    <field name="name_en_us"/>
                    <field name="money_digit"/>
                    <field name="price_digit"/>
                    <field name="is_default"/>
                    <field name="enable"/>
                    <field name="state"/>
                    <field name="last_sync_date"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>
        
        <!-- YonSuite Currency Form View -->
        <record id="yonsuite_currency_view_form" model="ir.ui.view">
            <field name="name">yonsuite.currency.view.form</field>
            <field name="model">yonsuite.currency</field>
            <field name="arch" type="xml">
                <form string="YonSuite Currency">
                    <header>
                        <button name="action_export_to_yonsuite" type="object" string="Sync from YonSuite" class="btn-primary" 
                                invisible="state in ['synced', 'error']" confirm="Are you sure you want to sync this currency from YonSuite?"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" class="btn-secondary" 
                                invisible="state != 'synced'"/>
                        <field name="state" widget="statusbar" options="{'statusbar_visible': 'draft,synced'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_export_to_yonsuite" type="object" class="oe_stat_button" icon="fa-download" 
                                    invisible="state in ['synced', 'error']">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Sync from</span>
                                    <span class="o_stat_text">YonSuite</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Enter currency name..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Basic Information">
                                <field name="yonsuite_id" readonly="1"/>
                                <field name="code"/>
                                <field name="curr_type_sign" readonly="1"/>
                                <field name="is_default"/>
                                <field name="enable"/>
                                <field name="order_grade" readonly="1"/>
                            </group>
                            <group string="Decimal Settings">
                                <field name="money_digit" readonly="1"/>
                                <field name="price_digit" readonly="1"/>
                                <field name="money_round" readonly="1"/>
                                <field name="price_round" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Multilingual Names">
                                <field name="name_en_us" readonly="1"/>
                                <field name="name_zh_cn" readonly="1"/>
                                <field name="name_zh_tw" readonly="1"/>
                                <field name="name_vi_vn" readonly="1"/>
                            </group>
                            <group string="System Information">
                                <field name="sysid" readonly="1"/>
                                <field name="ytenant" readonly="1"/>
                                <field name="tenant" readonly="1"/>
                                <field name="source_unique" readonly="1"/>
                                <field name="dr" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="User Information">
                                <field name="modifier" readonly="1"/>
                                <field name="modifier_code" readonly="1"/>
                                <field name="modifier_name" readonly="1"/>
                            </group>
                            <group string="Timestamps">
                                <field name="creationtime" readonly="1"/>
                                <field name="modifiedtime" readonly="1"/>
                                <field name="pubts" readonly="1"/>
                                <field name="last_sync_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Sync Information">
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" readonly="1"/>
                        </group>
                        
                        <group string="Sync Error" invisible="not sync_error_message">
                            <field name="sync_error_message" readonly="1" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- YonSuite Currency Search View -->
        <record id="yonsuite_currency_view_search" model="ir.ui.view">
            <field name="name">yonsuite.currency.view.search</field>
            <field name="model">yonsuite.currency</field>
            <field name="arch" type="xml">
                <search string="Search YonSuite Currencies">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="curr_type_sign"/>
                    <field name="name_en_us"/>
                    <field name="name_zh_cn"/>
                    <field name="yonsuite_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Synced" name="synced" domain="[('state', '=', 'synced')]"/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                    <filter string="Enabled" name="enabled" domain="[('enable', '=', True)]"/>
                    <filter string="Disabled" name="disabled" domain="[('enable', '=', False)]"/>
                    <filter string="Default" name="default" domain="[('is_default', '=', True)]"/>
                    <filter string="Non-Default" name="non_default" domain="[('is_default', '=', False)]"/>
                    <separator/>
                    <filter string="My Currencies" name="my_currencies" domain="[('create_uid', '=', uid)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Default Status" name="group_default" context="{'group_by': 'is_default'}"/>
                        <filter string="Enabled Status" name="group_enabled" context="{'group_by': 'enable'}"/>
                        <filter string="Created by" name="group_create_uid" context="{'group_by': 'create_uid'}"/>
                        <filter string="Creation Date" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- YonSuite Currency Action -->
        <record id="yonsuite_currency_action" model="ir.actions.act_window">
            <field name="name">YonSuite Currencies</field>
            <field name="res_model">yonsuite.currency</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="yonsuite_currency_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first YonSuite Currency!
                </p>
                <p>
                    YonSuite Currencies allow you to manage and synchronize currency data with YonSuite API.
                </p>
            </field>
        </record>
        
        
    </data>
</odoo>
