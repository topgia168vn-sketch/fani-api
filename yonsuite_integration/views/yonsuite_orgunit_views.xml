<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- YonSuite OrgUnit List View -->
        <record id="yonsuite_orgunit_view_list" model="ir.ui.view">
            <field name="name">yonsuite.orgunit.view.list</field>
            <field name="model">yonsuite.orgunit</field>
            <field name="arch" type="xml">
                <list string="YonSuite Organization Units" decoration-info="state=='draft'" decoration-success="state=='synced'" decoration-muted="state=='error'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="innercode"/>
                    <field name="level"/>
                    <field name="parent_name"/>
                    <field name="principal_name"/>
                    <field name="orgtype"/>
                    <field name="isbizunit"/>
                    <field name="is_biz_unit"/>
                    <field name="enable"/>
                    <field name="state"/>
                    <field name="last_sync_date"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>
        
        <!-- YonSuite OrgUnit list View -->
        <record id="yonsuite_orgunit_view_list" model="ir.ui.view">
            <field name="name">yonsuite.orgunit.view.list</field>
            <field name="model">yonsuite.orgunit</field>
            <field name="arch" type="xml">
                <list string="YonSuite Organization Units" decoration-info="state=='draft'" decoration-success="state=='synced'" decoration-muted="state=='error'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="innercode"/>
                    <field name="level"/>
                    <field name="principal_name"/>
                    <field name="orgtype"/>
                    <field name="isbizunit"/>
                    <field name="enable"/>
                    <field name="state"/>
                </list>
            </field>
        </record>
        
        <!-- YonSuite OrgUnit Form View -->
        <record id="yonsuite_orgunit_view_form" model="ir.ui.view">
            <field name="name">yonsuite.orgunit.view.form</field>
            <field name="model">yonsuite.orgunit</field>
            <field name="arch" type="xml">
                <form string="YonSuite Organization Unit">
                    <header>
                        <button name="action_export_to_yonsuite" type="object" string="Sync from YonSuite" class="btn-primary" 
                                invisible="state in ['synced', 'error']" confirm="Are you sure you want to sync this organization from YonSuite?"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" class="btn-secondary" 
                                invisible="state != 'synced'"/>
                        <field name="state" widget="statusbar" options="{'statusbar_visible': 'draft,synced'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_export_to_yonsuite" type="object" class="oe_stat_button" icon="fa-download" 
                                    invisible="state in ['synced', 'error']">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Sync from</span>
                                    <span class="o_stat_text">YonSuite</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Enter organization name..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Basic Information">
                                <field name="yonsuite_id" readonly="1"/>
                                <field name="code"/>
                                <field name="innercode"/>
                                <field name="level"/>
                                <field name="path" readonly="1"/>
                                <field name="description" readonly="1"/>
                            </group>
                            <group string="Organization">
                                <field name="parent_id" readonly="1"/>
                                <field name="parent" readonly="1"/>
                                <field name="parentid" readonly="1"/>
                                <field name="parent_name" readonly="1"/>
                                <field name="parent_code" readonly="1"/>
                                <field name="orgid" readonly="1"/>
                                <field name="orgtype"/>
                                <field name="isbizunit"/>
                                <field name="isdefault"/>
                                <field name="canEmployee"/>
                                <field name="externalorg"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Tax Information">
                                <field name="taxpayername"/>
                                <field name="taxpayerid"/>
                                <field name="taxpayertype"/>
                                <field name="companytype"/>
                            </group>
                            <group string="Status">
                                <field name="enable"/>
                                <field name="frozen"/>
                                <field name="closed"/>
                                <field name="dr"/>
                                <field name="is_biz_unit"/>
                                <field name="isEnd"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Sorting">
                                <field name="sort"/>
                                <field name="displayorder"/>
                                <field name="globalorder"/>
                            </group>
                            <group string="Timestamps">
                                <field name="creationtime" readonly="1"/>
                                <field name="modifiedtime" readonly="1"/>
                                <field name="effectivedate" readonly="1"/>
                                <field name="endtime" readonly="1"/>
                                <field name="pubts" readonly="1"/>
                                <field name="ts" readonly="1"/>
                                <field name="last_sync_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Users">
                                <field name="creator" readonly="1"/>
                                <field name="creator_userName" readonly="1"/>
                                <field name="modifier" readonly="1"/>
                                <field name="modifier_userName" readonly="1"/>
                                <field name="principal" readonly="1"/>
                                <field name="principal_name" readonly="1"/>
                            </group>
                            <group string="System Information">
                                <field name="tenantid" readonly="1"/>
                                <field name="tenant" readonly="1"/>
                                <field name="ytenant" readonly="1"/>
                                <field name="sysid" readonly="1"/>
                                <field name="sourceid" readonly="1"/>
                                <field name="sourcetype"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Additional Info">
                                <field name="exchangerate" readonly="1"/>
                                <field name="countryzone" readonly="1"/>
                                <field name="language" readonly="1"/>
                                <field name="address" readonly="1"/>
                                <field name="addressJson" readonly="1"/>
                                <field name="_mddFormulaExecuteFlag" readonly="1"/>
                            </group>
                            <group string="Sync Information">
                                <field name="create_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Multi-language Names">
                                <field name="name_zh_CN" readonly="1"/>
                                <field name="name_vi_VN" readonly="1"/>
                                <field name="name_en_US" readonly="1"/>
                            </group>
                            <group string="Multi-language Short Names">
                                <field name="shortname_zh_CN" readonly="1"/>
                                <field name="shortname_vi_VN" readonly="1"/>
                                <field name="shortname_en_US" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Parent Organization">
                                <field name="parentorgid" readonly="1"/>
                                <field name="parentorgid_name" readonly="1"/>
                            </group>
                            <group string="Business Organization">
                                <field name="bizorgid" readonly="1"/>
                                <field name="bizorgid_name" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Purchase Organization -->
                        <group string="Purchase Organization" invisible="not purchaseOrg_id">
                            <group>
                                <field name="purchaseOrg_id" readonly="1"/>
                                <field name="purchaseOrg_enable" readonly="1"/>
                                <field name="purchaseOrg_effectivedate" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Finance Organization -->
                        <group string="Finance Organization" invisible="not financeOrg_id">
                            <group>
                                <field name="financeOrg_id" readonly="1"/>
                                <field name="financeOrg_currency" readonly="1"/>
                                <field name="financeOrg_currency_name" readonly="1"/>
                                <field name="financeOrg_periodschema" readonly="1"/>
                                <field name="financeOrg_periodschema_name" readonly="1"/>
                            </group>
                            <group>
                                <field name="financeOrg_isexternalaccounting" readonly="1"/>
                                <field name="financeOrg_isinternalaccounting" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Admin Organization -->
                        <group string="Admin Organization" invisible="not adminOrg_id">
                            <group>
                                <field name="adminOrg_id" readonly="1"/>
                                <field name="adminOrg_employerOrg" readonly="1"/>
                                <field name="adminOrg_parentid_name" readonly="1"/>
                                <field name="adminOrg_parentorgid" readonly="1"/>
                            </group>
                            <group>
                                <field name="adminOrg_porgid_name" readonly="1"/>
                                <field name="adminOrg_parentorgid_name" readonly="1"/>
                                <field name="adminOrg_parentid" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Inventory Organization -->
                        <group string="Inventory Organization" invisible="not inventoryOrg_id">
                            <group>
                                <field name="inventoryOrg_id" readonly="1"/>
                                <field name="inventoryOrg_finorgid" readonly="1"/>
                                <field name="inventoryOrg_finorgid_name" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Funds Organization -->
                        <group string="Funds Organization" invisible="not fundsOrg_id">
                            <group>
                                <field name="fundsOrg_id" readonly="1"/>
                                <field name="fundsOrg_finorgid" readonly="1"/>
                                <field name="fundsOrg_finorgid_name" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Sales Organization -->
                        <group string="Sales Organization" invisible="not salesOrg_id">
                            <group>
                                <field name="salesOrg_id" readonly="1"/>
                                <field name="salesOrg_parentid" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Child Organizations" invisible="not child_ids">
                            <field name="child_ids" readonly="1" nolabel="1">
                                <list string="Child Organizations" decoration-info="state=='draft'" decoration-success="state=='synced'" decoration-muted="state=='error'">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="innercode"/>
                                    <field name="level"/>
                                    <field name="principal_name"/>
                                    <field name="enable"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </group>
                        
                        <group string="Sale Areas" invisible="not salearea_ids">
                            <field name="salearea_ids" readonly="1" nolabel="1">
                                <list string="Sale Areas" decoration-info="state=='draft'" decoration-success="state=='synced'" decoration-muted="state=='error'">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="simplified_name"/>
                                    <field name="level"/>
                                    <field name="stopStatus"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </group>
                        
                        <group string="Sync Error" invisible="not sync_error_message">
                            <field name="sync_error_message" readonly="1" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- YonSuite OrgUnit Search View -->
        <record id="yonsuite_orgunit_view_search" model="ir.ui.view">
            <field name="name">yonsuite.orgunit.view.search</field>
            <field name="model">yonsuite.orgunit</field>
            <field name="arch" type="xml">
                <search string="Search YonSuite Organization Units">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="innercode"/>
                    <field name="yonsuite_id"/>
                    <field name="parent_name"/>
                    <field name="principal_name"/>
                    <field name="creator_userName"/>
                    <field name="modifier_userName"/>
                    <field name="taxpayername"/>
                    <field name="taxpayerid"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Synced" name="synced" domain="[('state', '=', 'synced')]"/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                    <filter string="Enabled" name="enabled" domain="[('enable', '=', True)]"/>
                    <filter string="Disabled" name="disabled" domain="[('enable', '=', False)]"/>
                    <filter string="Business Unit" name="bizunit" domain="[('isbizunit', '=', True)]"/>
                    <filter string="Is Business Unit" name="is_biz_unit" domain="[('is_biz_unit', '=', True)]"/>
                    <filter string="Is End" name="is_end" domain="[('isEnd', '=', True)]"/>
                    <filter string="External Org" name="external" domain="[('externalorg', '=', True)]"/>
                    <filter string="Root Organizations" name="root_organizations" domain="[('parent_id', '=', False)]"/>
                    <separator/>
                    <filter string="My Organizations" name="my_organizations" domain="[('create_uid', '=', uid)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Organization Type" name="group_orgtype" context="{'group_by': 'orgtype'}"/>
                        <filter string="Level" name="group_level" context="{'group_by': 'level'}"/>
                        <filter string="Parent Name" name="group_parent_name" context="{'group_by': 'parent_name'}"/>
                        <filter string="Principal" name="group_principal" context="{'group_by': 'principal_name'}"/>
                        <filter string="Created by" name="group_create_uid" context="{'group_by': 'create_uid'}"/>
                        <filter string="Creation Date" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- YonSuite OrgUnit Action -->
        <record id="yonsuite_orgunit_action" model="ir.actions.act_window">
            <field name="name">YonSuite Organization Units</field>
            <field name="res_model">yonsuite.orgunit</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="yonsuite_orgunit_view_search"/>
            <field name="context">{'search_default_parent_id': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first YonSuite Organization Unit!
                </p>
                <p>
                    YonSuite Organization Units allow you to manage and synchronize organization data with YonSuite API.
                    Use list view to see the hierarchical structure of organizations.
                </p>
            </field>
        </record>
        
        <!-- YonSuite OrgUnit list Action -->
        <record id="yonsuite_orgunit_list_action" model="ir.actions.act_window">
            <field name="name">YonSuite Organization Units (list)</field>
            <field name="res_model">yonsuite.orgunit</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="yonsuite_orgunit_view_list"/>
            <field name="search_view_id" ref="yonsuite_orgunit_view_search"/>
            <field name="context">{'search_default_parent_id': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    View YonSuite Organization Units in list Structure!
                </p>
                <p>
                    This view shows the hierarchical structure of organizations with parent-child relationships.
                </p>
            </field>
        </record>
        
        
    </data>
</odoo>
