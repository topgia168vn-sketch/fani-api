<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- YonSuite SaleArea List View -->
        <record id="yonsuite_salearea_view_list" model="ir.ui.view">
            <field name="name">yonsuite.salearea.view.list</field>
            <field name="model">yonsuite.salearea</field>
            <field name="arch" type="xml">
                <list string="YonSuite Sale Areas" decoration-info="state=='draft'" decoration-success="state=='synced'" decoration-muted="state=='error'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="simplified_name"/>
                    <field name="level"/>
                    <field name="orgunit_id"/>
                    <field name="stopStatus"/>
                    <field name="state"/>
                    <field name="last_sync_date"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>
        
        
        <!-- YonSuite SaleArea Form View -->
        <record id="yonsuite_salearea_view_form" model="ir.ui.view">
            <field name="name">yonsuite.salearea.view.form</field>
            <field name="model">yonsuite.salearea</field>
            <field name="arch" type="xml">
                <form string="YonSuite Sale Area">
                    <header>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" class="btn-secondary" 
                                invisible="state != 'synced'"/>
                        <field name="state" widget="statusbar" options="{'statusbar_visible': 'draft,synced'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_export_to_yonsuite" type="object" class="oe_stat_button" icon="fa-upload" 
                                    invisible="yonsuite_id">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Push to</span>
                                    <span class="o_stat_text">YonSuite</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Enter sale area name..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Basic Information">
                                <field name="yonsuite_id" readonly="1"/>
                                <field name="code"/>
                                <field name="simplified_name" readonly="1"/>
                                <field name="level"/>
                                <field name="path" readonly="1"/>
                                <field name="remark" readonly="1"/>
                            </group>
                            <group string="Organization">
                                <field name="orgId" readonly="orgunit_id"/>
                                <field name="orgunit_id"/>
                                <field name="stopStatus"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Timestamps">
                                <field name="last_sync_date" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="create_uid" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Sync Error" invisible="not sync_error_message">
                            <field name="sync_error_message" readonly="1" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- YonSuite SaleArea Search View -->
        <record id="yonsuite_salearea_view_search" model="ir.ui.view">
            <field name="name">yonsuite.salearea.view.search</field>
            <field name="model">yonsuite.salearea</field>
            <field name="arch" type="xml">
                <search string="Search YonSuite Sale Areas">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="yonsuite_id"/>
                    <field name="simplified_name"/>
                    <field name="orgunit_id"/>
                    <field name="orgId"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Synced" name="synced" domain="[('state', '=', 'synced')]"/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                    <filter string="Active" name="active" domain="[('stopStatus', '=', False)]"/>
                    <filter string="Stopped" name="stopped" domain="[('stopStatus', '=', True)]"/>
                    <filter string="Level 1" name="level_1" domain="[('level', '=', 1)]"/>
                    <filter string="Level 2" name="level_2" domain="[('level', '=', 2)]"/>
                    <filter string="Level 3+" name="level_3_plus" domain="[('level', '&gt;=', 3)]"/>
                    <separator/>
                    <filter string="My Sale Areas" name="my_saleareas" domain="[('create_uid', '=', uid)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Level" name="group_level" context="{'group_by': 'level'}"/>
                        <filter string="Organization Unit" name="group_orgunit" context="{'group_by': 'orgunit_id'}"/>
                        <filter string="Stop Status" name="group_stop_status" context="{'group_by': 'stopStatus'}"/>
                        <filter string="Created by" name="group_create_uid" context="{'group_by': 'create_uid'}"/>
                        <filter string="Creation Date" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- YonSuite SaleArea Action -->
        <record id="yonsuite_salearea_action" model="ir.actions.act_window">
            <field name="name">YonSuite Sale Areas</field>
            <field name="res_model">yonsuite.salearea</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="yonsuite_salearea_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first YonSuite Sale Area!
                </p>
                <p>
                    YonSuite Sale Areas allow you to manage and synchronize sale area data with YonSuite API.
                </p>
            </field>
        </record>
        
        
        
    </data>
</odoo>
