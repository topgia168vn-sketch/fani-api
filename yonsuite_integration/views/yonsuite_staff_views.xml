<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- YonSuite Staff List View -->
        <record id="yonsuite_staff_view_list" model="ir.ui.view">
            <field name="name">yonsuite.staff.view.list</field>
            <field name="model">yonsuite.staff</field>
            <field name="arch" type="xml">
                <list string="YonSuite Staff" decoration-info="state=='draft'" decoration-success="state=='synced'" decoration-muted="state=='error'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="mobile"/>
                    <field name="dept_id"/>
                    <field name="enable"/>
                    <field name="state"/>
                    <field name="last_sync_date"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>
        
        <!-- YonSuite Staff Form View -->
        <record id="yonsuite_staff_view_form" model="ir.ui.view">
            <field name="name">yonsuite.staff.view.form</field>
            <field name="model">yonsuite.staff</field>
            <field name="arch" type="xml">
                <form string="YonSuite Staff">
                    <header>
                        <button name="action_export_to_yonsuite" type="object" string="Sync from YonSuite" class="btn-primary" 
                                invisible="state in ['synced', 'error']" confirm="Are you sure you want to sync this staff from YonSuite?"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" class="btn-secondary" 
                                invisible="state != 'synced'"/>
                        <field name="state" widget="statusbar" options="{'statusbar_visible': 'draft,synced'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_export_to_yonsuite" type="object" class="oe_stat_button" icon="fa-download" 
                                    invisible="state in ['synced', 'error']">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Sync from</span>
                                    <span class="o_stat_text">YonSuite</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Enter staff name..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Basic Information">
                                <field name="yonsuite_id" readonly="1"/>
                                <field name="code"/>
                                <field name="email"/>
                                <field name="mobile"/>
                                <field name="enable"/>
                            </group>
                            <group string="Organization">
                                <field name="user_id" readonly="1"/>
                                <field name="dept_id" readonly="1"/>
                                <field name="org_id" readonly="1"/>
                                <field name="ordernumber" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Additional Information">
                                <field name="dr" readonly="1"/>
                            </group>
                            <group string="Timestamps">
                                <field name="pubts" readonly="1"/>
                                <field name="enddate" readonly="1"/>
                                <field name="last_sync_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Sync Information">
                            <field name="create_date" readonly="1"/>
                            <field name="create_uid" readonly="1"/>
                        </group>
                        
                        <group string="Sync Error" invisible="not sync_error_message">
                            <field name="sync_error_message" readonly="1" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- YonSuite Staff Search View -->
        <record id="yonsuite_staff_view_search" model="ir.ui.view">
            <field name="name">yonsuite.staff.view.search</field>
            <field name="model">yonsuite.staff</field>
            <field name="arch" type="xml">
                <search string="Search YonSuite Staff">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="email"/>
                    <field name="mobile"/>
                    <field name="yonsuite_id"/>
                    <field name="dept_id"/>
                    <field name="org_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Synced" name="synced" domain="[('state', '=', 'synced')]"/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                    <filter string="Enabled" name="enabled" domain="[('enable', '=', True)]"/>
                    <filter string="Disabled" name="disabled" domain="[('enable', '=', False)]"/>
                    <separator/>
                    <filter string="My Staff" name="my_staff" domain="[('create_uid', '=', uid)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Department" name="group_dept" context="{'group_by': 'dept_id'}"/>
                        <filter string="Organization" name="group_org" context="{'group_by': 'org_id'}"/>
                        <filter string="Created by" name="group_create_uid" context="{'group_by': 'create_uid'}"/>
                        <filter string="Creation Date" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- YonSuite Staff Action -->
        <record id="yonsuite_staff_action" model="ir.actions.act_window">
            <field name="name">YonSuite Staff</field>
            <field name="res_model">yonsuite.staff</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="yonsuite_staff_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first YonSuite Staff!
                </p>
                <p>
                    YonSuite Staff allow you to manage and synchronize staff data with YonSuite API.
                </p>
            </field>
        </record>
        
        
    </data>
</odoo>
