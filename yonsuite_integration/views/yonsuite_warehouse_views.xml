<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- YonSuite Warehouse List View -->
        <record id="yonsuite_warehouse_view_list" model="ir.ui.view">
            <field name="name">yonsuite.warehouse.view.list</field>
            <field name="model">yonsuite.warehouse</field>
            <field name="arch" type="xml">
                <list string="YonSuite Warehouses" decoration-info="state=='draft'" decoration-success="state=='synced'" decoration-muted="state=='error'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="org_name"/>
                    <field name="ownerorg_name"/>
                    <field name="address"/>
                    <field name="linkman"/>
                    <field name="phone"/>
                    <field name="vendor_name"/>
                    <field name="b_wms"/>
                    <field name="state"/>
                    <field name="last_sync_date"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>
        
        <!-- YonSuite Warehouse Form View -->
        <record id="yonsuite_warehouse_view_form" model="ir.ui.view">
            <field name="name">yonsuite.warehouse.view.form</field>
            <field name="model">yonsuite.warehouse</field>
            <field name="arch" type="xml">
                <form string="YonSuite Warehouse">
                    <header>
                        <button name="action_export_to_yonsuite" type="object" string="Sync from YonSuite" class="btn-primary" 
                                invisible="state in ['synced', 'error']" confirm="Are you sure you want to sync this warehouse from YonSuite?"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft" class="btn-secondary" 
                                invisible="state != 'synced'"/>
                        <field name="state" widget="statusbar" options="{'statusbar_visible': 'draft,synced'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_export_to_yonsuite" type="object" class="oe_stat_button" icon="fa-download" 
                                    invisible="state in ['synced', 'error']">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Sync from</span>
                                    <span class="o_stat_text">YonSuite</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Enter warehouse name..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Basic Information">
                                <field name="yonsuite_id" readonly="1"/>
                                <field name="code"/>
                                <field name="erp_code"/>
                            </group>
                            <group string="Organization">
                                <field name="org_name" readonly="1"/>
                                <field name="org_code" readonly="1"/>
                                <field name="ownerorg_name" readonly="1"/>
                                <field name="ownerorg_code" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Address Information">
                                <field name="address"/>
                                <field name="country_name"/>
                                <field name="region_code"/>
                                <field name="bd_region_code"/>
                                <field name="longitude"/>
                                <field name="latitude"/>
                            </group>
                            <group string="Contact Information">
                                <field name="linkman"/>
                                <field name="phone"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Department">
                                <field name="department_name" readonly="1"/>
                                <field name="department_code" readonly="1"/>
                            </group>
                            <group string="Vendor &amp; Customer">
                                <field name="vendor_name" readonly="1"/>
                                <field name="consignment_customer_name" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Warehouse Features" name="features">
                                <group>
                                    <group string="Management Features">
                                        <field name="i_serial_manage"/>
                                        <field name="b_mrp"/>
                                        <field name="b_wms"/>
                                        <field name="join_stock_query"/>
                                        <field name="count_cost"/>
                                    </group>
                                    <group string="Storage Features">
                                        <field name="is_goods_position"/>
                                        <field name="is_goods_position_stock"/>
                                        <field name="is_inverted_scour"/>
                                        <field name="is_pda_storage"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Store Features">
                                        <field name="e_store"/>
                                        <field name="w_store"/>
                                        <field name="is_car_sales"/>
                                    </group>
                                    <group string="Other Features">
                                        <field name="is_subcontract_w"/>
                                        <field name="is_consignment"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Status &amp; Users" name="status_users">
                                <group>
                                    <group string="Status">
                                        <field name="i_used"/>
                                        <field name="is_waste_warehouse"/>
                                    </group>
                                    <group string="Users">
                                        <field name="operator_name" readonly="1"/>
                                        <field name="creator" readonly="1"/>
                                        <field name="modifier" readonly="1"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Timestamps">
                                        <field name="create_time" readonly="1"/>
                                        <field name="modify_time" readonly="1"/>
                                        <field name="pubts" readonly="1"/>
                                        <field name="create_date_detail" readonly="1"/>
                                        <field name="modify_date" readonly="1"/>
                                        <field name="last_sync_date" readonly="1"/>
                                    </group>
                                    <group string="Sync Information">
                                        <field name="create_date" readonly="1"/>
                                        <field name="create_uid" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        
                        <group string="Sync Error" invisible="not sync_error_message">
                            <field name="sync_error_message" readonly="1" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- YonSuite Warehouse Search View -->
        <record id="yonsuite_warehouse_view_search" model="ir.ui.view">
            <field name="name">yonsuite.warehouse.view.search</field>
            <field name="model">yonsuite.warehouse</field>
            <field name="arch" type="xml">
                <search string="Search YonSuite Warehouses">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="yonsuite_id"/>
                    <field name="org_name"/>
                    <field name="ownerorg_name"/>
                    <field name="address"/>
                    <field name="linkman"/>
                    <field name="vendor_name"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Synced" name="synced" domain="[('state', '=', 'synced')]"/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                    <filter string="WMS Enabled" name="wms_enabled" domain="[('b_wms', '=', True)]"/>
                    <filter string="MRP Enabled" name="mrp_enabled" domain="[('b_mrp', '=', True)]"/>
                    <filter string="E-Store" name="e_store" domain="[('e_store', '=', True)]"/>
                    <filter string="W-Store" name="w_store" domain="[('w_store', '=', True)]"/>
                    <separator/>
                    <filter string="My Warehouses" name="my_warehouses" domain="[('create_uid', '=', uid)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Organization" name="group_org" context="{'group_by': 'org_name'}"/>
                        <filter string="Owner Organization" name="group_ownerorg" context="{'group_by': 'ownerorg_name'}"/>
                        <filter string="Country" name="group_country" context="{'group_by': 'country_name'}"/>
                        <filter string="WMS" name="group_wms" context="{'group_by': 'b_wms'}"/>
                        <filter string="Created by" name="group_create_uid" context="{'group_by': 'create_uid'}"/>
                        <filter string="Creation Date" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- YonSuite Warehouse Action -->
        <record id="yonsuite_warehouse_action" model="ir.actions.act_window">
            <field name="name">YonSuite Warehouses</field>
            <field name="res_model">yonsuite.warehouse</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="yonsuite_warehouse_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first YonSuite Warehouse!
                </p>
                <p>
                    YonSuite Warehouses allow you to manage and synchronize warehouse data with YonSuite API.
                </p>
            </field>
        </record>
        
        
    </data>
</odoo>
